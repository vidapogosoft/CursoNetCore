@model MVCWebApp2.Models.Student

@{
    ViewData["Title"] = "Create";
}


<h1>Datos del alumno</h1>

<h2>Datos de alumno registrados</h2>

<div class="row">

    <div class="col-md-12">

        <div class="row">

            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.ID)
            </div>

            <div class="col-md-6">
                @Html.DisplayFor(model => model.ID)
            </div>

        </div>

        <div class="row">

            <div class="col-md-6">
                <label>Apellidos</label>
            </div>

            <div class="col-md-6">
                @Html.DisplayFor(model => model.LastName)
            </div>

        </div>

        <div class="row">

            <div class="col-md-6">
                <label>Nombres</label>
            </div>

            <div class="col-md-6">
                @Html.DisplayFor(model => model.FirstMidName)
            </div>

        </div>



    </div>

</div>

<form asp-action="Delete">

    <div class="row">
        <div class="col-md-12">
            <input type="hidden" asp-for="ID" />
            <input type="submit" class="btn btn-lg btn-danger" value="Eliminar" />
        </div>
    </div>


</form>


<div class="row">
    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-lg btn-warning">Regresar a consulta</a>
    </div>
</div>